<%= form_for([@contract, @contract_version]) do |f| %>
  <% if @contract_version.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contract_version.errors.count, "error") %> prohibited this contract_version from being saved:</h2>

      <ul>
      <% @contract_version.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Versionsnummer" %><br />
    <%= f.number_field :version %>
  </div>
  <div class="field">
    <%= f.label :start %><br />
    <%= f.date_select :start, {:include_blank => true, :default => nil} %>
  </div>
  <div class="field">
    <%= f.label "Zinssatz" %><br />
    <%= f.text_field :interest_rate %>
  </div>
  <h3>Laufzeit</h3>
  <h4>Unbefristeter Kredit</h4>
  <div class="field">
    <%= f.label :name, "Kündigungsfrist (in Monaten)" %><br />
    <%= number_field_tag :notice_period %>
  </div>
  <h4>Befristeter Kredit (verschiedene Angaben möglich)</h4>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date, {:include_blank => true, :default => nil} %>
  </div>
  <div class="field">
    <%= f.label :name, " * ODER * " %><br />
    <%= f.label :name, "Laufzeit in Monaten" %><br />
    <%= f.number_field :duration_months %>
  </div>
  <div class="field">
    <%= f.label :name, " * ODER * " %><br />
    <%= f.label :name, "Laufzeit in Jahren" %><br />
    <%= f.number_field :duration_years %>
  </div>
  <div class="actions">
    <%= f.submit "Fertig" %>
  </div>
<% end %>
