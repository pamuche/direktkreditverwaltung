\section{Zinsen f\"{u}r das Jahr <%= @year %>}

<% sum_interest = 0 %>

<% @contracts.each do |contract| %>
\subsection{Direktkreditvertrag Nr. <%= contract.number %>, <%= "#{contract.contact.prename} #{contract.contact.name}" %>}

{\bf Kontostand <%= DateTime.now.to_date %>:}
<%= currency(contract.balance DateTime.now.to_date) %>

{\bf Zinsberechnung <%= @year %>:}

\begin{tabular}{lllllll}

{\bf Datum}&{\bf Vorgang}&{\bf Betrag}&{\bf Zinssatz}&{\bf verbleibende Tage im Jahr}&{\bf verbleibender Anteil am Jahr}&{\bf Zinsen}\\

<% interest, interest_calculation = contract.interest @year %>
<% interest_calculation.each do |entry| %> 

<%= entry[:date] %>&<%= entry[:name] %>&<%= currency(entry[:amount]) %>&<%= fraction(entry[:interest_rate]).gsub("%","\\%") %>&<%= entry[:days_left_in_year] %>&<%= fraction(entry[:fraction_of_year]).gsub("%","\\%") %>&<%= currency(entry[:interest]) %>\\
<% end %> 
\end{tabular}

{\bf Zinsen <%= @year %>:} <%= currency(interest) %>

<% sum_interest += interest %>
<% end %>

\subsection{Summe Zinsen}
{\bf <%= currency(sum_interest) %> }



